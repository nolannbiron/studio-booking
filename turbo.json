{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["^yarn.lock", ".env", ".env.test"],
	"globalDotEnv": [".env"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist", ".react-email", "out", "build"]
		},
		"lint": {
			"dependsOn": ["^lint"],
			"cache": false
		},
		"test": {
			"dependsOn": ["^test"],
			"dotEnv": [".env.test.local", ".env.test", ".env.local", ".env"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dotEnv": [".env"]
		},
		"start": {
			"cache": false,
			"dotEnv": [".env"]
		},
		"@repo/api#start": {
			"cache": false
		},
		"@repo/api#test": {
			"cache": false,
			"dotEnv": [".env.test"]
		},
		"@repo/api#build": {
			"cache": false,
			"env": [
				"NODE_ENV",
				"JWT_SECRET",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"GITHUB_CLIENT_ID",
				"GITHUB_CLIENT_SECRET",
				"FACEBOOK_CLIENT_ID",
				"FACEBOOK_CLIENT_SECRET",
				"DATABASE_URL",
				"PORT"
			]
		},
		"@repo/api#dev": {
			"dependsOn": ["@repo/emails#build"],
			"cache": false,
			"dotEnv": [".env"]
		},
		"@repo/controllers": { "env": ["JWT_SECRET"] },
		"@repo/stripe": {
			"env": ["STRIPE_SECRET_KEY"]
		},
		"@repo/payments#start": {
			"cache": false
		},
		"@repo/payments#dev": {
			"cache": false,
			"env": ["NODE_ENV", "DATABASE_URL", "PAYMENTS_API_PORT", "STRIPE_WEBHOOK_SECRET"]
		},
		"@repo/payments#stripe:webhook": {
			"cache": false,
			"env": ["NODE_ENV", "DATABASE_URL", "PAYMENTS_API_PORT", "STRIPE_WEBHOOK_SECRET"]
		},
		"@repo/prisma": {
			"env": ["DATABASE_URL"],
			"dotEnv": [".env"]
		},
		"@repo/prisma#db-setup": {
			"env": ["DATABASE_URL"],
			"dotEnv": [".env"]
		},
		"@repo/prisma#db-setup-test": {
			"env": ["DATABASE_URL"],
			"dotEnv": [".env.test"]
		},
		"@repo/emails": {
			"env": ["RESEND_API_KEY"],
			"dotEnv": [".env"]
		},
		"@repo/web": {
			"dotEnv": [".env"]
		},
		"@repo/web#dev": {
			"cache": false,
			"dotEnv": [".env"]
		},
		"@repo/web#preview": {
			"cache": false,
			"dotEnv": [".env"]
		},
		"@repo/desktop": {
			"dotEnv": [".env"],
			"env": ["APP_ROOT", "VITE_PUBLIC", "VITE_DEV_SERVER_URL", "VITE_PUBLIC_DESKTOP_APP"]
		},
		"@repo/desktop#dev": {
			"cache": false,
			"dotEnv": [".env"]
		},
		"@repo/desktop#preview": {
			"cache": false,
			"dotEnv": [".env"]
		}
	},
	"globalEnv": [
		"WEBAPP_URL",
		"VITE_PUBLIC_WEBSITE_URL",
		"NODE_ENV",
		"ALLOWED_HOSTNAMES",
		"ANALYZE",
		"AUTH_BEARER_TOKEN_VERCEL",
		"BUILD_ID",
		"APP_APP_CREDENTIAL_ENCRYPTION_KEY",
		"APP_CREDENTIAL_SYNC_ENDPOINT",
		"APP_CREDENTIAL_SYNC_SECRET",
		"APP_CREDENTIAL_SYNC_SECRET_HEADER_NAME",
		"APP_ENV",
		"APP_LICENSE_KEY",
		"APP_QA_EMAIL",
		"APP_QA_PASSWORD",
		"APP_TELEMETRY_DISABLED",
		"APP_CREDENTIAL_SYNC_HEADER_NAME",
		"JWT_SECRET",
		"APP_CREDENTIAL_SYNC_SECRET",
		"CI",
		"DATABASE_URL",
		"DEBUG",

		"EMAIL_FROM",
		"EMAIL_SERVER_HOST",
		"EMAIL_SERVER_PASSWORD",
		"EMAIL_SERVER_PORT",
		"EMAIL_SERVER_USER",
		"EMAIL_SERVER",
		"AVATARAPI_USERNAME",
		"AVATARAPI_PASSWORD",
		"GOOGLE_API_CREDENTIALS",
		"GOOGLE_LOGIN_ENABLED",
		"IP_BANLIST",
		"VITE_PUBLIC_DISABLE_SIGNUP",
		"VITE_PUBLIC_EMBED_LIB_URL",
		"VITE_PUBLIC_HOSTED_CAL_FEATURES",
		"VITE_PUBLIC_SENDER_ID",
		"VITE_PUBLIC_SENDGRID_SENDER_NAME",
		"VITE_PUBLIC_STRIPE_PRICING_TABLE_ID",
		"VITE_PUBLIC_STRIPE_PRICING_TABLE_PUBLISHABLE_KEY",
		"VITE_PUBLIC_SUPPORT_MAIL_ADDRESS",
		"VITE_PUBLIC_VERCEL_URL",
		"VITE_PUBLIC_GTM_ID",
		"VITE_PUBLIC_DEBUG",
		"VITE_PUBLIC_COOKIE_DOMAIN",
		"NEXTAUTH_SECRET",
		"NEXTAUTH_URL",
		"NODE_ENV",
		"ORGANIZATIONS_ENABLED",
		"ORGANIZATIONS_AUTOLINK",

{
	"extends": "@repo/tsconfig/react-library.json",
	"compilerOptions": {
		"strict": true,
		"outDir": "dist",
		"target": "es2015",
		"jsx": "react-jsx",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"../../types/*.d.ts",
		"../../../apps/desktop/src/vite-env.d.ts",
		"../../../apps/desktop/electron/electron-env.d.ts"
	],
	"exclude": ["dist", "build", "node_modules"]
}

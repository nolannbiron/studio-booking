{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "React Library",
	"extends": "./base.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "ESNext",
		"target": "ES5",
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports" : true
	},
	"include": [".", "../i18n/i18n.d.ts"],
	"exclude": ["dist", "build", "node_modules"]
}
